{
  "parser": "babel-eslint",
  "plugins": [
    "import",
    "flowtype"
  ],
  "extends": [
    "eslint:recommended",
    "google",
    "plugin:import/errors",
    "plugin:import/warnings",
    "plugin:flowtype/recommended"
  ],
  "env": {
    "browser": true,
    "es6": true,
    "node": true
  },
  "settings": {
    "import/resolver": {
      "node": {}
    },
    "flowtype": {
      "onlyFilesWithFlowAnnotation": true
    }
  },
  "rules": {
    "semi": [
      "error",
      "never"
    ],
    "quotes": [
      2,
      "single"
    ],
    "brace-style": [
      2,
      "1tbs",
      {
        "allowSingleLine": true
      }
    ],
    "array-bracket-spacing": [
      2,
      "always"
    ],
    "arrow-parens": [
      2,
      "as-needed"
    ],
    "object-curly-spacing": [
      "error",
      "always"
    ],
    "comma-dangle": [
      "error",
      "never"
    ],
    "require-jsdoc": 0,
    "max-len": ["error", { "code": 120, "ignoreTrailingComments": true }],
    "indent": [
      2,
      2,
      {
        "SwitchCase": 1
      }
    ],
    "import/no-named-as-default": 0,
    "no-invalid-this": 0,
    "flowtype/no-types-missing-file-annotation": 0
  }
}
